<% content_for :title do %> Foobar Kadigan <% end %> <!-- View helper. This line creates the title -->
<% content_for :description do %> Website of Foobar Kadigan <% end %> <!-- View helper. This line creates the description of the site -->

<section>
  <img src="http://lorempixel.com/1170/600/cats/1"/>
</section>
<section>
  <div class="column">
    <h2>Stay in touch.</h2>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification%>
        <%= f.input :email, label: false, :placeholder => 'Your email address...'%>
        <br/>
        <%= f.button :submit, "Sign up for the newsletter", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>

